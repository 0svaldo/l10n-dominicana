<?xml version="1.0" encoding="UTF-8"?>
<templates id="template">

    <t t-extend="ClientDetailsEdit">
        <t t-jquery=".client-details-left" t-operation="append">
            <div class='client-detail'>
                <span class='label'>Factura</span>
                <select>
                    <option value='final'>Final</option>
                    <option value="fiscal">Fiscal</option>
                    <option value="gov">Gubernamental</option>
                    <option value="special">Especiales</option>
                </select>
            </div>
        </t>
    </t>

    <t t-extend="ClientDetails">
        <t t-jquery=".client-details-left" t-operation="append">
            <div class='client-detail'>
                <span class='label'>Tipo de comprobante</span>
                <t t-if='partner.sale_fiscal_type'>
                    <span class='detail client-sale-fiscal-type'>
                        <t t-esc='partner.sale_fiscal_type'/>
                    </span>
                </t>
                <t t-if='!partner.sale_fiscal_type'>
                    <span class='detail client-sale_fiscal_type empty'>N/A</span>
                </t>
            </div>
        </t>
    </t>

</templates>
